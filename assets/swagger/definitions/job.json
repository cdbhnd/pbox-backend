{
  "type": "object",
  "description": "Job Data",
  "properties": {
    "pickup": {
      "type": "object",
      "schema": {
          "$ref": "./geolocation.json"
      }
    },
    "destination": {
      "type": "object",
      "schema": {
          "$ref": "./geolocation.json"
      }
    },
    "size": {
      "description": "Job package size (S, M, L)",
      "type": "string"
    },
    "createdAt": {
      "description": "ISO timestamp when Job is created",
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "description": "Job current status",
      "type": "string"
    },
    "userId": {
      "description": "Unique id of the User who created the job",
      "type": "string"
    },
    "id": {
      "description": "Unique id of the Job",
      "type": "string"
    },
    "receiverName": {
      "description": "The name of the Receiver, or username if the Receiver is registered",
      "type": "string"
    },
    "receiverPhone": {
      "description": "The phone number of the Receiver",
      "type": "string"
    },
    "courierId": {
      "description": "The ID of a Courier who delivers the package.",
      "type": "string"
    },
    "box": {
      "description": "The attached BOX code.",
      "type": "string"
    }
  }
}